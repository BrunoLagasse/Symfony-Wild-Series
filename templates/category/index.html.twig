{% extends 'base.html.twig' %}

{% block title %}
	Liste des catégories
{% endblock %}

{% block body %}
	<h2>List des catégories :</h2>
	{% for category in categories %}
		<h2>
			- Catégorie :
			<br>
			<a href="{{path('category_show', {categoryName: category.name})}}">{{ category.name }}</a>
		</h2>
	{% else %}
		Aucune catégories trouvée.
	{% endfor %}

	<a href="{{ path('app_index') }}">Retour à l'accueil</a>
{% endblock %}